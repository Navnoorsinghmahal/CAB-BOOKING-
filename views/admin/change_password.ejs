<script>
    let submitForm = () => {
        $("#change_password_form").validate();
        if ($("#change_password_form").valid()) {
            let ele = document.getElementById("change_password_form").elements;
            let fd = new FormData();
            for (let i = 0; i < ele.length; i++) {
                fd.append(ele[i].name, ele[i].value)
            }

            fetch("/change_password_form", {
                method: "POST", body: fd
            }).then(res => res.json())
                .then(res => {
                    console.log(res)
                    if (res.error === true) {
                        document.getElementById("change_password_form").reset();
                        swal.fire({
                            icon: "error",
                            title: res.message,
                        })
                    } else {
                        document.getElementById("change_password_form").reset();
                        swal.fire({
                            icon: "success",
                            title: res.message,
                            timer: 1500
                        })


                    }
                }).catch((e) => {
                console.log(e)

            })
        }
    }
</script>

